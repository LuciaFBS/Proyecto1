<%- include('partials/header.ejs') %>
  <div class="container mt-5"> 
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <form action="/productos/update/<%= data.id %>" method="POST">
                        <div class="form-group">
                            <input type="text" name="codigo"  placeholder="Name" value="<%= data.codigo %>" class="form-control">
                        </div>
                        <br>
                        <div class="form-group">
                            <input type="text" name="descripcion"  placeholder="Direccion" value="<%= data.descripcion %>"  class="form-control">
                        </div>
                        <br>
                        <div class="form-group">
                            <input type="text" name="precioVenta"  placeholder="Telefono" value="<%= data.precioVenta %>"   class="form-control">
                        </div>
                        <br>
                        <div class="form-group">
                          <input type="text" name="precioCompra"  placeholder="Telefono" value="<%= data.precioCompra %>"   class="form-control">
                      </div>
                      <br>
                      <div class="form-group">
                        <input type="text" name="existencia"  placeholder="Telefono" value="<%= data.existencia %>"   class="form-control">
                    </div>
                    <br>
                        <button type="submit" class="btn btn-primary">Modificar</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
  </div>
<%- include('partials/footer.ejs') %>