<%- include('partials/header.ejs') %>
  <div class="container mt-5"> 
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <form action="/customer/update/<%= data.id %>" method="POST">
                        <div class="form-group">
                            <input type="text" name="name"  placeholder="Name" value="<%= data.name %>" class="form-control">
                        </div>
                        <br>
                        <div class="form-group">
                            <input type="text" name="address"  placeholder="Direccion" value="<%= data.address %>"  class="form-control">
                        </div>
                        <br>
                        <div class="form-group">
                            <input type="text" name="phone"  placeholder="Telefono" value="<%= data.phone %>"   class="form-control">
                        </div>
                        <br>
                        <button type="submit" class="btn btn-primary">Modificar</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
  </div>
<%- include('partials/footer.ejs') %>